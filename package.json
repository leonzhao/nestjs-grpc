{
  "name": "@cexc/nestjs-app",
  "version": "0.0.1",
  "description": "nestjs app demo",
  "author": "demo",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/mongoose": "^5.0.0",
    "@nestjs/passport": "^1.0.11",
    "@nestjs/swagger": "^2.0.2",
    "@nestjs/typeorm": "^5.0.0",
    "@nestjs/websockets": "^5.0.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "fastify-formbody": "^2.0.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.1.5",
    "mysql": "^2.15.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.7",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.0.1",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "debug": "^3.1.0",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript-eslint-parser": "^16.0.0",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  },
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "publishConfig": {
    "registry": "http://registry.chainexcloud.net/registry/npm-private/"
  }
}
